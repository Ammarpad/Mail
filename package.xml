<?xml version="1.0" encoding="ISO-8859-1" ?>
<!-- do not use the "Type" attribute here, that one is only for
     generated package.xml files -->
<package version="1.0">

  <name>Mail</name>
  <summary>Class that provides multiple interfaces for sending emails</summary>
  <description>PEAR's Mail:: package defines the interface for implementing mailers under the PEAR hierarchy, and provides supporting functions useful in multiple mailer backends. Currently supported are native PHP mail() function, sendmail and SMTP. This package also provides a RFC 822 Email address list validation utility class.</description>
  <license>PHP/BSD</license>

  <maintainers>
    <maintainer>
      <user>chagenbu</user>
      <role>lead</role>
      <name>Chuck Hagenbuch</name>
      <email>chuck@horde.org</email>
    </maintainer>

    <maintainer>
      <user>richard</user>
      <role>developer</role>
      <name>Richard Heyes</name>
      <email>richard@phpguru.org</email>
    </maintainer>

    <maintainer>
      <user>jon</user>
      <role>developer</role>
      <name>Jon Parise</name>
      <email>jon@php.net</email>
    </maintainer>
  </maintainers>

  <release>
    <version>1.1.2</version>
    <date>2003-??-??</date>
    <notes>The 'localhost' value can now be set in the SMTP driver.</notes>
    <state>stable</state>
    <filelist>
        <dir name="/" role="php">
            <file name="Mail.php"/>
            <dir name="Mail">
                <file name="mail.php"/>
                <file name="sendmail.php"/>
                <file name="smtp.php"/>
                <file name="RFC822.php"/>
            </dir>
        </dir>
    </filelist>
    <deps>
      <dep type="pkg" rel="ge" version="1.1.0" optional="yes">Net_SMTP</dep>
    </deps>
  </release>

  <changelog>
    <release>
      <version>1.1.1</version>
      <date>2003-06-26</date>
      <notes>Minor fixes with newlines in headers.</notes>
      <state>stable</state>
    </release>

    <release>
      <version>1.1.0</version>
      <date>2003-06-21</date>
      <notes>The Mail package now depends on Net_SMTP 1.1.0 or greater for its SMTP authentication capabilities.</notes>
      <state>stable</state>
    </release>

    <release>
      <version>1.0.2</version>
      <date>2002-07-27</date>
      <notes>Minor additions and changes to RFC822.php. Fixed line terminator issue for smtp.php and set smtp.php to use Return-Path header in place of From header for MAIL FROM: (if supplied)</notes>
      <state>stable</state>
    </release>

    <release>
      <version>1.0.1</version>
      <date>2002-07-27</date>
      <notes>License change for RFC822.php</notes>
      <state>stable</state>
    </release>

    <release>
      <version>1.0</version>
      <date>2002-06-06</date>
      <notes>Initial release as PEAR package</notes>
      <state>stable</state>
    </release>

  </changelog>
</package>
